# EngLog Worker Server Environment Configuration - Development
# "The worker never sleeps, tirelessly processing tasks like a digital ant colony." 🐜

# =============================================================================
# Application Configuration
# =============================================================================
APP_ENV=development
LOG_LEVEL=info

# =============================================================================
# Worker Configuration
# =============================================================================
WORKER_ID=worker-1
WORKER_NAME=EngLog Worker
WORKER_VERSION=1.0.0
WORKER_HEALTH_PORT=8091
MAX_CONCURRENT_TASKS=5

# =============================================================================
# gRPC Client Configuration (Worker -> API Communication)
# =============================================================================
GRPC_API_SERVER_ADDRESS=api-server-dev:50051
TLS_ENABLED=false
TLS_CERT_FILE=./certs/server.crt
TLS_KEY_FILE=./certs/server.key
GRPC_SERVER_NAME=localhost

# =============================================================================
# AI Service Configuration (Ollama)
# =============================================================================
OLLAMA_URL=http://localhost:11434
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=300s
OLLAMA_MAX_TOKENS=2048

# =============================================================================
# Email Service Configuration (Worker handles email sending)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_NAME=EngLog
SMTP_FROM_EMAIL=noreply@englog.dev

# =============================================================================
# Background Jobs Configuration (Worker-specific)
# =============================================================================
EMAIL_QUEUE_WORKERS=3
INSIGHT_GENERATION_TIMEOUT=600s

# =============================================================================
# Development Configuration
# =============================================================================
DEBUG=true
HOT_RELOAD=true

# =============================================================================
# Docker/Deployment Configuration
# =============================================================================
DOCKER_REGISTRY=docker.io
IMAGE_TAG=latest
DEPLOYMENT_ENV=development
